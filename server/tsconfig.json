{
  "compilerOptions": {
    "target": "ES2022",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "outDir": "./dist",
    "sourceMap": true,

    // --- Add these options for a more lenient build ---
    "strict": false,               // Disables all strict type-checking options
    "noImplicitAny": false,        // Allows variables with an implied 'any' type
    "strictNullChecks": false,     // Allows 'null' & 'undefined' to be assigned to any type
    "skipLibCheck": true           // Skips type checking of declaration files (*.d.ts)
  },
  "include": [
    "src/index.ts",
    "src/agent.ts",
    "src/seed-database.ts"
  ]
}